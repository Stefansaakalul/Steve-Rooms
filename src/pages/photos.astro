---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Rooms', href: '/rooms' },
    { linkText: 'Photos', href: '/photos' },
];

const roomImages = [
    { src: '/images/rooms/room1.jpg', alt: 'Room 1' },
    { src: '/images/rooms/room2.jpg', alt: 'Room 2' },
    { src: '/images/rooms/room3.jpg', alt: 'Room 3' },
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <a href="/">
        <Logo />
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>

<!-- TITLU SECTIUNE -->
<section class="text-center px-4 pb-20">
    <h1 class="text-4xl font-bold mb-4">Photos of our rooms</h1>
    <h2 class="text-xl font-medium mb-6">These are our rooms</h2>

    <!-- Butonul -->
    <a href="/reserve" class="inline-block bg-green-700 text-white px-6 py-3 rounded hover:bg-green-800 transition mb-10">
        Reserve a room
    </a>

    <!-- Pozele -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 max-w-5xl mx-auto mt-6">
        {
            roomImages.map((img) => (
                <img src={img.src} alt={img.alt} class="w-full h-auto rounded shadow-md" />
            ))
        }
    </div>
</section>
