---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const explainer = `
These are our rooms
`;
---

<Layout title="Steve Rooms">
    <ContextAlert class="mb-8" />
    <h1 class="mb-10">Photos of our rooms</h1>
    <Markdown content={explainer} class="mb-10 text-lg" />

    {/* Imagini sub "These are our rooms" */}
    <div class="room-images mb-10 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <img src="/images/room1.jpg" alt="Room 1" class="rounded shadow" />
      <img src="/images/room2.jpg" alt="Room 2" class="rounded shadow" />
      <img src="/images/room3.jpg" alt="Room 3" class="rounded shadow" />
    </div>

    <p>
        <a href="https://docs.netlify.com/frameworks/astro/" class="btn btn-lg sm:min-w-64">Reserve a room</a>
    </p>
</Layout>
