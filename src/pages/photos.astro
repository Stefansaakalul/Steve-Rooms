---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const explainer = `
These are our rooms
`;
---

<Layout title="Steve Rooms">
    <ContextAlert class="mb-8" />
    <h1 class="mb-10">Photos of our rooms</h1>
    <Markdown content={explainer} class="mb-10 text-lg" />
    <p>
        <a href="https://docs.netlify.com/frameworks/astro/" class="btn btn-lg sm:min-w-64">Reserve a room</a>
    </p>
</Layout>